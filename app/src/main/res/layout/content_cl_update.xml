<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:scrollbarStyle="outsideOverlay"
    tools:context="dietrixapp.dietrix.ClUpdate"
    tools:showIn="@layout/activity_cl_update">

    <RelativeLayout
        android:id="@+id/RelLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/Rel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/UpdDueET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000000"
                android:hint="Due Date"
                android:textSize="20sp"
                android:background="@drawable/rounded" />

            <Spinner
                android:id="@+id/UpdActSpET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded"
                android:entries="@array/ActInact" />


            <EditText
                android:id="@+id/UpdFeeET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/UpdDueET"
                android:layout_marginStart="40dp"
                android:background="@drawable/rounded"
                android:hint="Fee"
                android:inputType="number"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/UpdIdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="1sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Rel1">

            <EditText
                android:id="@+id/UpdNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/rounded"
                android:layout_marginTop="6dp"
                android:hint="Name"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/UpdPhoneET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:inputType="phone"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:background="@drawable/rounded"
                android:hint="Phone Number"
                android:layout_below="@+id/UpdNameET"
                android:layout_marginTop="25dp"/>

            <Spinner
                android:id="@+id/UpdDurationSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/DurationList"
                android:background="@drawable/rounded"
                android:padding="13dp"
                android:layout_alignTop="@+id/UpdPhoneET"
                android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/UpdHeightET"
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/UpdDateET"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded"
                android:hint="Height"
                android:textSize="20sp"
                android:layout_below="@+id/UpdPhoneET"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/UpdDateET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:background="@drawable/rounded"
                android:hint="Join Date"
                android:layout_below="@+id/UpdPhoneET"
                android:layout_marginTop="25dp" />

            <EditText
                android:id="@+id/UpdAgeET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:inputType="number"
                android:hint="Age"
                android:textSize="20sp"
                android:background="@drawable/rounded"
                android:layout_above="@+id/UpdSpCaseET"
                android:layout_alignParentEnd="true" />

            <EditText
                android:id="@+id/UpdSpCaseET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/rounded"
                android:hint="Specific Conditions"
                android:textSize="20sp"
                android:layout_below="@+id/UpdDateET"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/UpdEmailET"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/rounded"
                android:hint="Email"
                android:textSize="16sp"
                android:maxLines="2"
                android:layout_below="@+id/UpdSpCaseET"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/UpdAddressET"
                android:inputType="textPostalAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/rounded"
                android:hint="Address"
                android:textSize="16sp"
                android:maxLines="3"
                android:layout_below="@+id/UpdEmailET"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>


    </RelativeLayout>


</ScrollView>