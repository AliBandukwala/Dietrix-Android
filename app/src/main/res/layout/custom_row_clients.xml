<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ClDueTxt"
                android:layout_width="4dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ClientNameText"
                android:layout_weight="0.02"
                android:background="@android:color/background_light"
                android:textSize="1sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ClSpCsTxt"
                android:layout_width="4dp"
                android:layout_height="1dp"
                android:visibility="invisible"
                android:layout_alignEnd="@+id/ClIdTxt"
                android:textSize="1sp" />

            <TextView
                android:id="@+id/ClientNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ClPhTxt"
                android:layout_width="4dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ClientNameText"
                android:layout_weight="0.02"
                android:background="@android:color/background_light"
                android:textSize="1sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ClIdTxt"
                android:layout_width="4dp"
                android:layout_height="1dp"
                android:layout_below="@+id/ClientNameText"
                android:layout_centerHorizontal="true"
                android:textSize="1sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ClActTxt"
                android:layout_width="4dp"
                android:layout_height="1dp"
                android:layout_below="@+id/ClientNameText"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_toEndOf="@+id/ClIdTxt"
                android:layout_toRightOf="@+id/ClIdTxt"
                android:textSize="1sp"
                android:visibility="invisible" />

        </RelativeLayout>

</android.support.v7.widget.CardView>